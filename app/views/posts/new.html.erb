<div class="editPost">
	<h1>Schedule A Post</h1>

	<%= form_for @post do |f| %>

		<% if @post.errors.any? %>
			<div class="alert">
				<h6>There were errors with your submission.</h6>
				<% @post.errors.full_messages.each do |m| %>
					<li><%= m %></li>
				<% end %>	
				<span class="flashX" onclick="this.parentNode.style.display = 'none';">âœ–</span>
			</div>
		<% end %>

		<%= f.label :eta, class: "label" %>
	  <%= f.datetime_field :eta, value: (@post.eta? ? @post.eta : Time.zone.now), class: "#{@post.errors['eta'].empty? ? '' : 'inputErrorBlink'}" %>

	  <%= f.label :sender, class: "label" %>
	  <%= f.text_field :sender, class: "#{@post.errors['sender'].empty? ? '' : 'inputErrorBlink'}" %>

	  <%= f.label :recipients, class: "label" %>
	  <%= f.text_field :recipients, value: (@post.recipients? ? @post.recipients.join(", ") : ""), class: "#{@post.errors['recipients'].empty? ? '' : 'inputErrorBlink'}" %>

	  <%= f.label :subject, class: "label" %>
	  <%= f.text_field :subject, class: "#{@post.errors['subject'].empty? ? '' : 'inputErrorBlink'}" %>

	  <%= f.label :body, class: "label" %>
	  <%= f.text_area :body, class: "#{@post.errors['body'].empty? ? '' : 'inputErrorBlink'}" %>

	  <%= f.submit nil, class: "submit" %>
	<% end %>
</div>
